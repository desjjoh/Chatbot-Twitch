{
  "name": "chatbot",
  "version": "1.0.0",
  "description": "",
  "author": "John Desjardins",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "dev": "node --watch --import tsx src/main.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/main.js",
    "docker:build": "docker build -t twitchbot .",
    "docker:run": "docker run --rm -it --env-file .env --name twitchbot twitchbot",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@twurple/chat": "^7.4.0",
    "bullmq": "^5.61.0",
    "dotenv": "^17.2.3",
    "moment": "^2.30.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "tmi.js": "^1.8.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@types/tmi.js": "^1.8.6",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsconfig-paths": "^4.2.0"
  }
}
